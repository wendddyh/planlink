<div class="container-fluid">
  <!-- Top Row -->
  <div class="row bg-light p-2">
    <div class="col-6 friend-requests">
      Friend Requests
    </div>
    <div class="col-6 find-friends">
      <%= link_to "Find Friends", new_friend_request_path %>
    </div>
  </div>

  <% @friend_requests.each do |request| %>
    <% if !request.confirmed %>
      <% @friend = User.find(request.user_id) %>
      <div class="row mt-3">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body d-flex justify-content-between align-items-center">
              <!-- Circular div holding image aligned to the left -->
              <div class="circular-div">
                <!-- Replace 'your_image_url' with the actual image URL -->
                <%= image_tag @friend.image_url, alt: "User Image", class: "img-fluid rounded-circle", style: "width: 50px; height: 50px;" %>
              </div>

              <!-- Paragraph aligned to the right of the image -->
              <p class="text-right ml-3">
                <span style="font-weight: bold;">
                  <%= @friend.first_name %> <%= @friend.last_name %>
                </span>
              </p>

              <!-- Confirm button aligned to the right with increased size -->
              <div class="d-flex align-items-center">
                <%= form_for request, url: { action: "update", id: request.id }, method: :patch, remote: true do |f| %>
                  <%= f.hidden_field :confirmed, value: true %>
                  <%= f.submit "Confirm", class: "btn btn-success btn-sm ml-2 px-3 py-2" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
