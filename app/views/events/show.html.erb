<div class="container">
  <div class="row">
    <div class="col-md-12"  style="background-image: url(<%= @venue.photo_url %>); height:60vw; background-size:cover;" >
      <div class="col-md-12 d-flex" id="eventshowpage">
        <%= link_to profiles_path do %>
          <i class="fa-solid fa-arrow-left" id="arrow_left"></i>
        <% end %>
        <h3>Event Details </h3>
      </div>

      <div class="col d-flex">
        <div class="col-md-12 col-lg-6" id="eventshowpage-detail">
          <h2><%= @event.event_name %></h2>
          <div class="venueaddresss d-flex">
            <i class="fa-solid fa-location-dot"></i>
            <div class="venueaddress">
              <h3><%= @venue.name %></h3>
              <p><%= @venue.address %></p>
            </div>
          </div>
          <div class="venuesecondetails d-flex">
            <i class="fa-regular fa-calendar"></i>
            <div class="venuesecondetail">
              <h3><%= @event.start_date %></h3>
              <p><%= @event.time %></p>
            </div>
          </div>
        </div>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item dropdown">
              <div class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa-solid fa-ellipsis-vertical"></i>
              </div>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to icon('fa-solid fa-trash', class:'fa-shake'), venue_event_path(@venue.id, @event.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to cancel this event? Your attendees will be notify." } %>
                <% if policy(@event).show? %>
                  <%= link_to "Edit this Event", edit_venue_event_path(@event) %>
                <% end %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12" id="eventshowpage-description">
      <h3>Description</h3>
      <p><%= @event.event_detail %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 d-flex" id="invitationbutton">
      <div data-controller="toggle" class="mt-1">
        <button data-action="click->toggle#scroll" class ="btn btn-outline-primary" id="btn">INVITE</button>
        <div data-toggle-target="togglableElement" class="drawer">
          
        </div>
      <%# <%= link_to "INVITE", new_venue_event_attendance_path(@venue, @event) %>
      </div>
    </div>
  </div>

  <%= render 'shared/footer' %>
</div>
