<div class="container">
  <div class="row">

    <div class="col-md-12 d-flex" id="eventshowpage">
      <%= link_to users_path do %>
        <i class="fa-solid fa-circle-arrow-left" id="arrow_left"></i>
      <% end %>
      <h3>Event Details </h3>
    </div>
    <div class="col-md-12 col-lg-6" id="eventshowpage-detail">
        <%= @event.event_name %>
        <%= @venue.name %>
        <%= @venue.address %>
        <%= @event.start_date %>-<%= @event.end_date %>
        <%= @event.time %>
    </div>
    <div class="col-md-12" id="eventshowpage-description">
      <h3>Description</h3>
      <%= @event.event_detail %>
    </div>
    <div data-controller="slide">
      <button data-action="click->slide#slideUp" data-slide-target="content">Invite</button>
      <div data-slide-target="content" class="content">
        <%= render 'attendances/form' %>
      </div>
    </div>
    <%= link_to "Invite",  new_venue_event_attendance_path(@venue.id, @event.id) %>
  </div>
</div>


