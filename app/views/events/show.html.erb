<div class="container">
  <div class="row">
    <div class="col-md-12" style="background-image: linear-gradient(rgb(255 255 255 / 45%), rgb(255 255 255 / 30%)), url('<%= cl_image_path @event.photo.key, height:300, crop: :fit%>')" >
      <div class="col-md-12 d-flex" id="eventshowpage">
        <%= link_to profiles_path do %>
          <i class="fa-solid fa-arrow-left" id="arrow_left"></i>
        <% end %>
        <h3>Event Details </h3>
      </div>

      <div class="col d-flex">
        <div class="col-md-12 col-lg-6" id="eventshowpage-detail">
          <h2><%= @event.event_name %></h2>
          <div class="venueaddresss d-flex">
            <i class="fa-solid fa-location-dot"></i>
            <div class="venueaddress">
              <h3><%= @venue.name %></h3>
              <p><%= @venue.address %></p>
            </div>
          </div>
          <div class="venuesecondetails d-flex">
            <i class="fa-regular fa-calendar"></i>
            <div class="venuesecondetail">
              <h3><%= @event.start_date %></h3>
              <p><%= @event.time %></p>
            </div>
          </div>
        </div>
        <%= link_to icon('fa-solid fa-trash', class:'fa-shake'), booking_event_path(@booking.id, @event.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to cancel this event? Your attendees will be notify." } %>
                <% if policy(@event).show? %>
                  <%= link_to "Edit this Event", edit_booking_event_path(@booking, @event) %>
                <% end %>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item dropdown">
              <div class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa-solid fa-ellipsis-vertical"></i>
              </div>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

              </div>
            </li>
          </ul>
        </div>

      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12" id="eventshowpage-description">
      <h3>Description</h3>
      <p><%= @event.event_detail %></p>
      <p><%= @event.additional %></p>
      <p><%= @event.meal_dietary %></p>
    </div>
  </div>



 <%= link_to 'Add user',  new_booking_event_attendance_path(@booking, @event.id),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'}  %>










  <%= render 'shared/footer' %>
</div>
